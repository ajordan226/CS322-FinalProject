#:kivy 1.11.1


MyLayout:
    scr_mngr: scr_mngr
    orientation:'horizontal'

    BoxLayout:
        orientation:'vertical'
        Button:
            size_hint:.25,.25
            text:'Login'
            on_press:
                root.change_screen("Login")
        Button:
            size_hint:.25,.25
            text:'Register'
            on_press:
                root.change_screen("Register")
        Button:
            size_hint:.25,.25
            text:'Projects?'
            on_press:
                root.change_screen("Projects")
        Button:
            size_hint: .25,.25
            text:'moderation'
            on_press:
                root.change_screen("Moderation")

    RelativeLayout:
        size_hint:.75,1
        pos_hint:{'x':.25,'y':0}
        ScreenManager:
            id: scr_mngr
            Login:
                name: 'Login'
            Register:
                name: 'Register'
            Projects:
                name: 'Projects'
            newEntry:
                name: 'newEntry'
            GroupPage:
                name: 'GroupPage'
            Moderation:
                name: 'Moderation'
            MessageBoard:
                name: 'MessageBoard'
<SuccessPopup>:
    auto_dismiss: True
    title: ""
    separator_height: 0
    pos_hint: {'x':.275,'y':.25}
    size_hint: .7,.5
    FloatLayout:
        Label:
            id: textLabel
            pos_hint:{'x':.0,'y':.2}
            text: "Success!"
            font_size: "40dp"
        Button:
            pos_hint:{'x':0,'y':0}
            size_hint: 1,.25
            text: "Close"
            on_release:
                root.dismiss()

<Register>:
    FloatLayout:
        Label:
            pos_hint:{'x':-.15,'y':.4}
            font_size: '30dp'            
            text: "Username:"
        TextInput:
            id: username
            size_hint: .275,.05
            pos_hint:{'x':.45,'y':.875}
            label: 'username'
        Label:
            pos_hint:{'x':-.15,'y':.325}
            font_size: '30dp'
            text: "RealName:"
        TextInput:
            id: realname
            size_hint: .275,.05
            pos_hint:{'x':.45,'y':.8}
        Label:
            pos_hint:{'x':-.1925,'y':.25}
            font_size: '30dp'
            text: "Email:"
        TextInput:
            id: email
            size_hint: .35,.05
            pos_hint:{'x':.375,'y':.725}
        Label:
            pos_hint:{'x':-.1525,'y':.175}
            font_size: '30dp'
            text: "Reference:"
        TextInput:
            id: reference
            size_hint: .275,.05
            pos_hint:{'x':.45,'y':.65}
        Label:
            pos_hint:{'x':-.3,'y':.1}
            font_size: '30dp'
            text: "Credentials:"
        TextInput:
            id: credentials
            size_hint: .8,.4
            pos_hint:{'x':.1,'y':.15}
        Button:
            text: "Submit"
            font_size: '30dp'
            size_hint: .4,.075
            pos_hint:{'x':.29,'y':.05}
            on_release: 
                root.register(username,realname,email,credentials,reference)
<Login>:
    FloatLayout:
        Label:
            pos_hint:{'x':-.15,'y':.1}
            font_size: '30dp'            
            text: "Username:"
        TextInput:
            id: user
            size_hint: .275,.05
            pos_hint:{'x':.45,'y':.575}
            label: 'username'
        Label:
            pos_hint:{'x':-.15,'y':.025}
            font_size: '30dp'
            text: "Password:"
        TextInput:
            id: password
            size_hint: .275,.05
            pos_hint:{'x':.45,'y':.5}
            label: 'password'
            password: True
        Button:
            text: "Login"
            font_size: '30dp'
            size_hint: .4,.075
            pos_hint:{'x':.29,'y':.4}
            on_release: 
                root.verifyLogin(user, password)
            

<GroupPage>:
    pos_hint: {'x':.125,'y':0.0125}
    size_hint: .75,1
    FloatLayout:

        GridLayout:
            rows:2
            cols:2
            size_hint:None,None
            size: root.width,root.height/4
            Button:
                text: 'MessageBoard'
            Button:
                text: 'UserList'
            Button:
                text: 'Back'
                on_release:
                    root.manager.current = 'Projects'
            Button:
                text: 'Poll'
                


<Projects>:
    
    RelativeLayout:
        Button:
            text: 'Create New Project'
            pos_hint: {'x':.25,'y':.05}
            size_hint:(.5,.1)
            on_release:
                root.manager.current = 'newEntry'
        RelativeLayout:
            size_hint:(1,.75)
            pos_hint: {'x':.10,'y':.2}
            RecycleView:
                viewclass: 'SelectableButton'
                size_hint:(.8,.9)
                data: [{'text': str(x)} for x in root.data_projects]
                SelectableRecycleGridLayout:
                    id: rv
                    cols: 4
                    default_size: None, dp(45)
                    default_size_hint: .9, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: False
                    
                    
					                   
<newEntry>:
    project_name:projectName
    project_info:projectInfo
    pos_hint: {'x':.125,'y':0.0125}
    size_hint: .75,1
    FloatLayout:

        Label:
            text: 'Project Name'
            font_size: 25
            pos_hint:{'x':0,'y':.45}
        TextInput:
            id: projectName
            size_hint:.5,.1
            pos_hint:{'x':.25,'y':.8}
        Label:
            text: 'Project Description'
            font_size: 25
            pos_hint: {'x':0,'y':.25}
        TextInput: 
            id:projectInfo
            size_hint: .75,.35
            pos_hint:{'x':.125,'y':.35}
  
 
        BoxLayout:
            orientation:'horizontal'
            pos_hint:{'x':0,'y':0}
            Button:
                text: 'Close'
                size_hint: .5,.1
                on_release:
                    root.manager.current = 'Projects'
                    #root.dismiss()
            Button:
                text: 'Submit'
                size_hint: .5,.1
                on_release:
                    root.submit()
                    root.clocked_switch()


        
            